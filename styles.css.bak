body {
    font-family: Arial, sans-serif;
    margin: 0;
    padding: 0;
    line-height: 1.6;
    background: url('images/background.jpeg') no-repeat center center fixed; /* Arrière-plan avec l'image */
    background-size: cover; /* Ajuste l'image pour couvrir tout l'écran */
    color: #ffffff; /* Texte en blanc pour contraster avec le fond */
}

header {
    background: rgba(0, 0, 0, 0.7); /* Couleur semi-transparente pour le header */
    color: #fff;
    padding: 10px 0;
    text-align: center;
}

header nav ul {
    list-style: none;
    padding: 0;
    margin: 0;
}

header nav ul li {
    display: inline;
    margin: 0 15px;
}

header nav ul li a {
    color: #fff;
    text-decoration: none;
    font-weight: bold;
    transition: color 0.3s ease;
}

header nav ul li a:hover {
    color: #00d4ff; /* Couleur accent au survol */
}

main {
    padding: 20px;
    background: rgba(0, 0, 0, 0.6); /* Fond semi-transparent pour mieux lire le contenu */
    border-radius: 10px;
    max-width: 1000px;
    margin: 20px auto;
    color: #ffffff;
}

section {
    margin: 20px 0;
}

footer {
    background: rgba(0, 0, 0, 0.7); /* Fond semi-transparent */
    color: #fff;
    text-align: center;
    padding: 10px 0;
    position: fixed;
    bottom: 0;
    width: 100%;
    font-size: 0.9em;
}
